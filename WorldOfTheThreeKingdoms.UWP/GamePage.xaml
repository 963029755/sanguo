<Page
    x:Class="WorldOfTheThreeKingdoms.UWP.GamePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WorldOfTheThreeKingdoms.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <SwapChainPanel x:Name="swapChainPanel" >
        <Image x:Name="RenderedImage" Width="500" Height="250" Margin="10, 10, 0, 0" Visibility="Visible" Stretch="None" />
        <Grid x:Name="grid" Background="#99010101" Visibility="Collapsed">

            <TextBox x:Name="txtSeason" HorizontalAlignment="Center" VerticalAlignment="Top" Width="280" Height="40" Margin="0,30,0,0" />

            <Button x:Name="btnSeason" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" Content="提交" Click="btnSeason_Click" Foreground="Black" Background="White" />

        </Grid>
        
        
    </SwapChainPanel>

</Page>
